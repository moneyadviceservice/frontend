
<%= content_for(:email_template_subject_name) do %>
  <%= @resource.first_name %>
<% end %>

<%= content_for(:email_template_body) do %>

  <p><%= t("authentication.emails.reset_passwords.intro")%></p>

  <p><%= t("authentication.emails.reset_passwords.step_1")%></p>

  <p><%= link_to t("authentication.emails.reset_passwords.link_label"), edit_password_url(@resource, reset_password_token: @token, locale: I18n.locale) %></p>

  <p><%= t("authentication.emails.reset_passwords.step_2")%></p>

  <%= t("authentication.emails.reset_passwords.step_3_html")%>

  <p><%= t("authentication.emails.reset_passwords.expired_token_tip")%></p>

  <p><%= t("authentication.emails.reset_passwords.expired_token_tip_steps_html") %></p>

<% end %>
