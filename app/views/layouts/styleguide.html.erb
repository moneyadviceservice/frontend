<% content_for :head do %>
  <meta name="robots" content="noindex">
  <!--[if ( gte IE 7 ) & ( lte IE 8 ) & (!IEMobile) ]>
    <%= stylesheet_link_tag 'styleguide/styleguide_fixed', media: 'all' %>
  <![endif]-->

  <!--[if ( !IE ) | ( gte IE 9 ) ]><!-->
    <%= stylesheet_link_tag 'styleguide/styleguide_responsive', media: 'only all' %>
  <!--<![endif]-->
<% end %>

<% content_for :content do %>
  <%= render 'navigation' unless params.key?('no-nav') %>
  <%= yield :main %>
<% end %>

<% content_for :javascripts do %>
  <%= javascript_include_tag :styleguide %>
<% end %>

<%= render template: 'layouts/base' %>
