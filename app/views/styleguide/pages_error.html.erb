<main role="main">
  <div class="l-constrained">
    <div class="l-error-page-message">
      <h1 class="error-page__headline">Sorry</h1>

      <p class="error-page__text">This page can't be found</p>

      <p class="error-page__search-text">Please make sure you’ve entered the correct address,
  or use the box below to find what you’re looking for.</p>

      <form data-dough-component="ClearInput" action="/en/search" method="get" role="search" class="error-page__search search">
        <label class="visually-hidden" for="search">Search the Money Advice Service</label>
        <input data-dough-clear-input class="search__input" id="search" required type="search" name="query" autocomplete="off" placeholder="Search for free money advice" />

        <button data-dough-clear-input-button type="reset" class="search__clear">
          <span class="icon icon--clear"></span>
          <span class="visually-hidden">clear the search field</span>
        </button>

        <button class="search__submit" type="submit">
          <span class="icon icon--search"></span>
          <span class="visually-hidden">Search</span>
        </button>
      </form>
    </div>
  </div>
  <div class="error-page__directory">
    <div class="l-constrained">
      <%= heading_tag(level: heading_level ||= 2, class: 'l-home-directory__title') do %>
        <%= t('home.show.directory_heading_two') %>
      <% end %>
      <%= render 'shared/directory', items: category_navigation %>
    </div>
  </div>
</main>
