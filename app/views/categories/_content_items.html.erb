<ol class="category-detail__list">
  <% initial_contents.each do |item| %>
    <li class="category-detail__list-item">
      <%= link_to item.title, item.path %>
    </li>
  <% end %>
</ol>
<ol class="collapsible-section category-detail__list category-detail__list--extended js-category-detail__list--extended">
  <% extended_contents.each do |item| %>
    <li class="category-detail__list-item">
      <%= link_to item.title, item.path %>
    </li>
  <% end %>
</ol>
<button class="unstyled-button category-detail__toggle-view js-category-detail__toggle-view">
  <span class="category-detail__view_all"><%= t('categories.show.view_all') %></span>
  <span class="category-detail__view_less"><%= t('categories.show.view_less') %></span>
</button>
