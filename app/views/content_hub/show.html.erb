<% set_meta_tags(
  title: t("#{translation_prefix}.page_title"), 
  description: t("#{translation_prefix}.meta_description")
) %>

<div class="l-content-hub__main">
  <div class="l-content-hub__inner">
    <div class="l-constrained">
      <section class="l-content-hub__title">
        <%= heading_tag t("#{translation_prefix}.page_title"), class: 'heading-extra-large content-hub__heading', level: 1 %>

        <% if I18n.exists?("#{translation_prefix}.page_subtitle") %>
          <p><%= t("#{translation_prefix}.page_subtitle") %></p>
        <% end %>
      </section>

      <section class="l-content-hub__hero">
        <div class="l-content-hub__hero-inner">
          <div
            class="content-hub__hero-image"
            style="background-image:url(<%= asset_path("content_hub/#{t("#{translation_prefix}.hero.image")}") %>"
          ></div>
          <div class="l-content-hub__hero-content">
            <%= heading_tag t("#{translation_prefix}.hero.title"), class: 'content-hub__hero-title heading-large', level: 1 %>
            <div class="content-hub__hero-description">
              <%= t("#{translation_prefix}.hero.description_html") %>
            </div>
            <a href="<%= t("#{translation_prefix}.hero.button.url") %>" class="button button--primary content-hub__hero-button">
              <%= t("#{translation_prefix}.hero.button.text") %>
            </a>
          </div>
        </div>
      </section>

      <section class="l-content-hub__modules">
        <div class="l-content-hub__modules-inner">
          <div class="l-content-hub__modules-content">
            <% t("#{translation_prefix}.blocks").each do |block| %>
              <%= render partial: "/content_hub/blocks/#{block[:type]}", locals: { block: block } %>
            <% end %>
          </div>
        </div>
      </section>
    </div>
  </div>
</div>

<% content_for(:alternate_link) do %>
  <%= link_to content_hub_path(t('alternate_slug'), locale: I18n.locale == :en ? 'cy' : 'en') do %>
    <%= I18n.locale == :en ? 'Cymraeg' : 'English'%>
    <span class="icon icon--globe"></span>
  <% end %>
<% end %>
