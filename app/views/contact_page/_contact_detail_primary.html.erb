<h1><%= t('contact_page.title') %></h1>

<p class="intro"><%= t('contact_page.intro') %></p>

<% t('contact_page.details').each do |detail| %>
  <div class="contact-detail">
    <h2 class="contact-detail__heading"><%= detail[:heading] %></h2>

    <div class="contact-detail__content">
      <%= raw detail[:content_html] %>
    </div>
  </div>
<% end %>
