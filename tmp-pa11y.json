pa11y({
    allowedStandards: ['WCAG2AA']
});

var pa11y = require('pa11y');

// Set the default Foo header to "bar"
var test = pa11y({
    page: {
        headers: {
            Foo: 'bar'
        }
    }
});

// Run a test with the Foo header set to "bar"
test.run('http://localhost:3000/', function(error, results) { /* ... */ });

// Run a test with the Foo header overridden
test.run('http://localhost:3000/', {
    page: {
        headers: {
            Foo: 'hello'
        }
    }
}, function(error, results) { /* ... */ });
