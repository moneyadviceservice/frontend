<section class="l-pace__adviser" id="<%= t('pace.nav.links')[0][:id] %>">
  <div class="l-constrained">
    <%= heading_tag t('pace.adviser.heading'), level: 3, class: 'l-pace__adviser__heading' %>
    <ol class="l-pace__adviser__list">
      <% t('pace.adviser.list').each do |list| %>
        <li class="l-pace__adviser__list-item">
          <%= heading_tag level: 4, class: 'l-pace__adviser__list-item__heading' do %>
            <span class="l-pace__adviser__list-item__heading__text"><%= list[:heading] %></span>
          <% end %>

          <div class="l-pace__adviser__list-item__content">
            <%= list[:content_html].html_safe %>
          </div>
        </li>
      <% end %>
    </ol>
  </div>
</section>
