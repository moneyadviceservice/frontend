<div class="contact l-padded">
  <div class="l-constrained">
    <div class="contact__container">
      <h2 class="contact__heading"><%= t('home.show.contact.title') %></h2>

      <p class="contact__text"><%= t('home.show.contact.introduction') %></p>
    </div>

    <div class="contact__container contact__container--bubble">
      <p class="contact__call-us"><%= t('home.show.contact.call_us') %>&hellip;</p>
      <a class="contact__number" href="tel:<%= t('home.show.contact.number') %>"><%= t('home.show.contact.number') %></a>
    </div>

    <div class="contact__container contact__opening-hours">
      <h3 class="contact__opening-hours__heading"><%= t('home.show.contact.opening_hours_heading') %></h3>

      <p class="contact__opening-hours__text"><%= t('home.show.contact.opening_hours_html') %></p>

      <p class="contact__opening-hours__link"><%= t('home.show.contact.call_charges_html') %></p>
    </div>
  </div>
</div>
