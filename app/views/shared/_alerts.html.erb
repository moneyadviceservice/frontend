<% flash.to_hash.slice('info', 'notice', 'success', 'error').each do |name, msg| %>
  <div class="global-alert global-alert--<%= name %>">
    <div class="global-alert__content-container">
      <p class="global-alert__heading"><%= t("flash.label.#{name}").titleize %></p>
      <%= content_tag :p, msg, class: 'global-alert__message' %>
    </div>
  </div>
<% end %>
