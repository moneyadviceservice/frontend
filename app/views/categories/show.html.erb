<div id="content">
  <section>
    <h1><%= category.title %></h1>
    <p id="description"><%= category.description %></p>

    <% category.contents.each do |subcategory| %>
      <article>
        <h2><%= link_to subcategory.title, category_path(subcategory.id) %></h2>

        <% if subcategory.contents.present? %>
          <ul>
          <% subcategory.contents.each do |subsubcategory| %>
            <li><%= link_to subsubcategory.title, category_path(subsubcategory.id) %></li>
          <% end%>
          </ul>
        <% end %>

      </article>
    <% end %>

  </section>
</div>
