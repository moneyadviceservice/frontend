<% set_meta_tags(title:       t('money_navigator_tool.meta.title'),
                 description: t('money_navigator_tool.meta.description'),
                 canonical:   t('money_navigator_tool.meta.canonical'),
                 alternate:   t('money_navigator_tool.meta.alternate')) %>

<div class="l-container-tool">
	<main>
		<div class="l-money_navigator-landing">
			<section class="landing__intro">
				<h1 class="l-money_navigator__heading"><%= t("money_navigator_tool.landing.intro.heading") %></h1>

				<h2 class="l-money_navigator__subheading"><%= t("money_navigator_tool.landing.intro.subheading") %></h2>

				<% t("money_navigator_tool.landing.intro.text.paras").each do |para| %>
					<p><%= para %></p>
				<% end %>
			</section>

			<section class="landing__who-help">
				<h2><%= t("money_navigator_tool.landing.who-help.heading") %></h2>

				<ul>
					<% t("money_navigator_tool.landing.who-help.bullets").each do |bullet| %>
						<li><%= bullet %></li>
					<% end %>
				</ul>
			</section>

			<section class="landing__how-help">
				<h2><%= t("money_navigator_tool.landing.how-help.heading") %></h2>

				<% t("money_navigator_tool.landing.how-help.paras").each do |para| %>
					<p><%= para %></p>
				<% end %>

				<ul>
					<% t("money_navigator_tool.landing.how-help.bullets").each do |bullet| %>
						<li><%= bullet %></li>
					<% end %>
				</ul>

				<a href="#"><%= t("money_navigator_tool.landing.how-help.cta") %></a>
			</section>

			<section class="landing__crisis-help">
				<h2><%= t("money_navigator_tool.landing.crisis-help.heading") %></h2>

				<p><%= t("money_navigator_tool.landing.crisis-help.text") %></p>

				<a href="#"><%= t("money_navigator_tool.landing.crisis-help.cta") %></a>
			</section>

			<section class="landing__supporting-partners">
				<h2><%= t("money_navigator_tool.landing.supporting-partners.heading") %></h2>

				<p><%= t("money_navigator_tool.landing.supporting-partners.text") %></p>

				<ul>
					<% t("money_navigator_tool.landing.supporting-partners.partners").each do |partner| %>
						<li><%= partner %></li>
					<% end %>
				</ul>
			</section>
		</div>
	</main>
</div>
