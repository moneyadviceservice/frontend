<div class="news-signup-sticky
  <% if local_assigns.has_key?(:fixed_position) %> news-signup-sticky--positioned
  <% end %> js-news-signup-sticky-form" role="dialog" aria-labelledby="news-signup__header" aria-describedby="news-signup-sticky__description1 news-signup-sticky__description2" data-dough-component="NewsletterSticky" data-done="<%= t('newsletter_subscriptions.sticky.done') %>">
  <div class="news-signup-sticky__text news-signup-sticky__text--display">
    <h2 id="news-signup__header" class="visually-hidden"><%= t('newsletter') %></h2>
    <p class="news-signup-sticky__intro" id="news-signup-sticky__description1"><%= t('newsletter_subscriptions.sticky.intro') %></p>

    <p class="news-signup-sticky__intro" id="news-signup-sticky__description2">
      <span class="news-signup-sticky__intro--emphasize"><%= t('newsletter_subscriptions.sticky.are_you') %></span> <%= t('newsletter_subscriptions.sticky.sign_up_today') %>
    </p>
  </div>
  <div class="news-signup-sticky__error">
    <p class="news-signup-sticky__intro news-signup-sticky__intro--emphasize">
      <%= t('newsletter_subscriptions.sticky.sorry') %>
    </p>
  </div>

  <div class="news-signup-sticky__inner">
    <%= form_tag(main_app.newsletter_subscription_path, remote: true) do %>
      <div class="news-signup-sticky__submitform">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token, id: 'sticky_authenticity_token' -%>
        <%= hidden_field_tag 'subscription[ga_categoryid]', 'Newsletter SignUp Sticky', {:id => "subscription[sticky_ga_categoryid]"} -%>
        <%= hidden_field_tag 'subscription[category]', 'sticky', {:id => "subscription[sticky_category]"} -%>
        <%= hidden_field_tag 'close-box-cookie-url', main_app.cookie_dismissal_path, {:id => "close-box-cookie-url"} -%>
        <%= label_tag('subscription[email]', t('newsletter_subscriptions.label'), for: 'news-signup-email-sticky', class: 'news-signup-sticky__email-label') %>
        <%= email_field_tag('subscription[email]', nil, id: 'news-signup-email-sticky', class: 'news-signup-sticky__email-input js-news-signup-sticky-input', placeholder: t('newsletter_subscriptions.sticky.placeholder_text'), required: true) %>
        <%= button_tag(t('newsletter_subscriptions.sticky.send_me_money_advice'), type: 'submit', class: 'mas-button mas-button--newsletter') %>
        <p class="news-signup-sticky__disclaimer"><%= t('newsletter_subscriptions.sticky.privacy_policy_html') %></p>
      </div>
      <button type="submit" class="news-signup-sticky__close unstyled-button" title="<%= t('newsletter_subscriptions.sticky.dont_ask_me_again') %>">
        <%= render 'shared/svg/use_icon',
                   icon: 'desktop-close-box',
                   accessibility_title: t('newsletter_subscriptions.sticky.dont_ask_me_again'),
                   accessibility_description: 'Close this popup',
                   svg_fallback_support: true
        %>
        <%= render 'shared/svg/use_icon',
                   icon: 'mobile-close-box',
                   accessibility_title: t('newsletter_subscriptions.sticky.dont_ask_me_again'),
                   accessibility_description: 'Close this popup',
                   svg_fallback_support: true
        %>
      </button>
    <% end %>
  </div>
</div>
