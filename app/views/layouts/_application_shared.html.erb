<%= render layout: 'layouts/base' do %>
  <a class="skip-to-link" href="#main">Skip to main content</a>

  <% if display_skip_to_main_navigation? %>
    <a class="skip-to-link" href="#primary-nav">Skip to main navigation</a>
  <% end %>

  <% if Feature.active?(:accessibility_link) %>
    <a class="skip-to-link" href="<%= t('footer.accessibility_link') %>">Accessibility Statement</a>
  <% end %>

  <%= render 'shared/alerts' if alerts? %>
  <%= render 'shared/header' %>

  <%= yield %>

  <%= render 'shared/contact_panels', contact_panels_border_top: contact_panels_border_top? %>
  <%= render 'shared/footer' %>
<% end %>
