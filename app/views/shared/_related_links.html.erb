<div class="related-links">
  <h2 class="related-links__heading visually-hidden">Related content</h2>
  <% categories.each do |category| %>
    <div class="related-links__category">
      <h3 class="related-links__category-heading">
        <%= link_to category.title, category.path %>
      </h3>
      <ul class="unstyled-list">
        <% category.contents.each do |article| %>
          <li class="related-links__category-link">
            <%= link_to article.title, article.path %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
