<%= render layout: 'layouts/application_shared' do %>
  <% if content_for?(:context_bar) %>
    <div class="l-context-bar">
      <div class="l-constrained">
        <%= yield :context_bar %>
      </div>
    </div>
  <% end %>

  <div class="t-default-main-content" <%== 'id="main"' if default_main_content_location? %> tabindex="-1">
    <%= yield %>
  </div>
<% end %>
