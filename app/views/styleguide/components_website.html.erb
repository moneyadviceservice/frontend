<%= styleguide_section sections['Home Top'] do %>
  <%= render 'shared/home_top', item: item %>
<% end %>

<%= styleguide_section sections['Directory'] do %>
  <%= render 'shared/directory',
             items: categories_for_directory_en %>
<% end %>

