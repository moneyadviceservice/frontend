//= require require_config

if(MAS.supports.fonts && MAS.bootstrap.fontsUrl) {

  require(['webfonts'], function () {
    var fontConfig = {
      custom: {
        families: ['MuseoSlab', 'icomoon'],
        urls: [MAS.bootstrap.fontsUrl]
      }
    };
    WebFont.load(fontConfig);
  })
}

require(['analytics'], function (analytics) {
  analytics.scrollTracking({
    el: '.editorial',
    triggerPoints: [0.25, 0.5, 0.75, 1]
  });
});

require([MAS.bootstrap.I18n_locale, 'collapsable'], function (Text, Collapsable) {
  var articleCollapsables = new Collapsable({
    showOnlyFirst:true,
    showIcon:true,
    textString: {
      showThisSection: Text.show || 'Show this section',
      hideThisSection: Text.hide || 'Hide this section'
    }
  });

});
