<ul class="authentication <% unless display_search_box_in_header? %>l-authentication<% end %>">
  <% if user_signed_in? %>
    <li class="authentication__item">
      <%= button_to t('authentication.sign_out'), main_app.destroy_user_session_path,
                    class: 'authentication__link', method: :delete %>
    </li>
    <li class="authentication__item">
      <%= link_to t('authentication.my_account'), main_app.edit_user_registration_path,
                  class: 'authentication__link' %>
    </li>
  <% else %>
    <li class="authentication__item">
      <%= link_to t('authentication.sign_in'), main_app.new_user_session_path,
                  class: 'authentication__link' %>
    </li>
    <li class="authentication__item">
      <%= link_to t('authentication.register'), main_app.new_user_registration_path,
                  class: 'authentication__link' %>
    </li>
  <% end %>
</ul>
