<div class="footer-utility-links">
  <div class="l-constrained">

    <ul class="footer-utility-links__list footer-utility-links__list--left">
      <li class="footer-utility-links__item language-link">
        <% if content_for?(:alternate_link) %>
          <%= yield(:alternate_link) %>
        <% else %>
          <% locals.each do |locale| %>
            <%= link_to({ locale: locale }, id: "#{locale}Link", lang: locale, class: 'footer-utility-links__link') do %>
              <span class="icon icon--globe"></span><%= t("locales.#{locale}") %>
            <% end %>
          <% end %>
        <% end %>
      </li>

      <li class="footer-utility-links__item accessibility-feedback-link">
        <a class="footer-utility-links__link" href="http://accessin.org/usersubmit_mas.php?param=nojscript" onclick="window.open('http://accessin.org/usersubmit_mas.php?param=' + window.location,'',
            'resizable=yes,location=no,scrollbars=yes,toolbar=no,left=20,top=0,height=900,width=800');
            return false;" title="Please use this button to tell us if you have an accessibility issue on our website"
           target="_blank">
          <span class="icon icon--accessibility"></span>Accessibility feedback
          <span class="visually-hidden">Feedback form opens in a new window</span>
        </a>
        </a>
      </li>
    </ul>

    <ul class="footer-utility-links__list footer-utility-links__list--right">
      <li class="footer-utility-links__item">
        <a class="footer-utility-links__link" href="<%= t('footer.site_map_link') %>"><%= t('footer.site_map') %></a>
      </li>

      <li class="footer-utility-links__item">
        <a class="footer-utility-links__link" href="<%= t('footer.accessibility_link') %>"><%= t('footer.accessibility') %></a>
      </li>

      <li class="footer-utility-links__item">
        <a class="footer-utility-links__link" href="<%= t('footer.terms_and_conditions_link') %>"><%= t('footer.terms_and_conditions') %></a>
      </li>

      <li class="footer-utility-links__item">
        <a class="footer-utility-links__link" href="<%= t('footer.privacy_statement_link') %>"><%= t('footer.privacy_statement') %></a>
      </li>

      <li class="footer-utility-links__item">
        <a class="footer-utility-links__link" href="<%= t('footer.cookie_guide_link') %>"><%= t('footer.cookie_guide') %></a>
      </li>
    </ul>

  </div>
</div>

<% if cookies_not_accepted? %>
  <div class="cookie-message">
    <%= form_tag cookie_notice_acceptance_path, remote: true, authenticity_token: true, class: 'js-cookie-message' do %>
      <p class="cookie-message__content"><%= t('footer.cookie_message.body_html', url: t('footer.cookie_guide_link')) %></p>
      <button class="cookie-message__close-button">
        <span class="visually-hidden"><%= t('footer.cookie_message.close_button') %></span><span class="icon icon--close"></span>
      </button>
    <% end %>
  </div>
<% end %>
