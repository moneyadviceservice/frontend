<div class="l-constrained">
  <section class="l-tool-promos">
    <%= link_to(t('home.show.tools_view_all'), class: 'l-tool-promos__item promo__link') do %>
      <span class="icon icon--calculator l-tool-promos__calculator"></span>
      <%= heading_tag(level: 2, class: 'l-tool-promos__heading') do %>
        <%= t('home.show.tools_heading') %>
      <% end %>
      <div class="l-tool-promos__view-all">
        <%= t('home.show.view_all_link_html') %><span class="visually-hidden"><%= t('home.show.view_all_link_expanded') %></span>
      </div>
    <% end %>
    <% items.each do |item| %>
      <%= link_to item['url'], class: 'l-tool-promos__item promo__link' do %>
        <%= heading_tag(level: 3, class: 'promo__heading') do %>
          <%= item['heading'] %>
        <% end %>
        <p class="promo__content">
          <%= item['text'] %>
        </p>
        <%= render 'shared/svg/use_icon', icon: 'arrow-right', class_name: 'promo__arrow' %>
      <% end %>
    <% end %>
  </section>
</div>
