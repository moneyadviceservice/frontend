<h1>Website-specific Components</h1>

<%= render 'shared/svg/icon_sprite' %>

<!-- Molecules -->
<%= styleguide_section sections['Mobile navigation'] do %>
  <%= render 'shared/mobile_nav' %>
<% end %>

<%= styleguide_section sections['Breadcrumbs'] do %>
  <%= render 'shared/breadcrumbs', breadcrumbs: categories %>
<% end %>

<%= styleguide_section sections['related categories'] do %>
  <%= render 'shared/related_categories', categories: categories %>
<% end %>

<%= styleguide_section sections['related link'] do %>
  <%= render 'shared/related_links', categories: categories_related_links %>
<% end %>

<%= styleguide_section sections['more in'] do %>
  <%= render 'shared/more_in', article: article, categories: categories %>
<% end %>

<%= styleguide_section sections['link-list-primary'] do %>
  <%= render 'styleguide/shared/link_list_primary' %>
<% end %>

<%= styleguide_section sections['link-list-secondary'] do %>
  <%= render 'styleguide/shared/link_list_secondary' %>
<% end %>

<%= styleguide_section sections['link-list-tertiary'] do %>
  <%= render 'styleguide/shared/link_list_tertiary' %>
<% end %>

<%= styleguide_section sections['Secondary Footer'] do %>
  <%= render 'shared/footer_secondary', locals: alternate_locales %>
<% end %>

<%= styleguide_section sections['Newsletter Signup'] do %>
  <%= render 'shared/newsletter_signup' %>
<% end %>

<%= styleguide_section sections['Newsletter Signup Sticky'] do %>
  <%= render 'shared/news_signup_sticky' %>
<% end %>

<%= styleguide_section sections['Contact Panel'] do %>
  <%= render 'styleguide/shared/contact_panel' %>
<% end %>

<!-- Organisms -->

<%= styleguide_section sections['Home Top'] do %>
  <%= render 'shared/home_top' %>
<% end %>

<%= styleguide_section sections['Directory'] do %>
  <%= render 'shared/directory',
             items: categories_for_directory_en %>
<% end %>

<%= styleguide_section sections['Promo'] do %>
  <%= render 'shared/tool_promos', items: t('home.show.tools') %>
  <%= render 'shared/article_promos', items_with_image: t('home.show.promoted'), items_without_image: t('home.show.promoted_no_image') %>
<% end %>

<%= styleguide_section sections['Stripe banner'] do %>
  <%= render 'shared/stripe_banner' %>
<% end %>

<%= styleguide_section sections['Main navigation'] do %>
  <%= render 'shared/nav', categories: @categories_for_directory_en %>
<% end %>

<%= styleguide_section sections['Search'] do %>
  <%= render 'shared/search', search_in_page_header: true %>
<% end %>

<%= styleguide_section sections['Call Us'] do %>
  <%= render 'shared/call_us' %>
<% end %>
